<h3>スケジュール新規作成</h3>

<%= render "shared/error", obj: @user %> 
 
<%= form_with model: @user do |f| %>
  <table>
    <tr>
      <th><%= f.label :text ,"タイトル" %></th>
      <td class="show_table"><%= f.text_field :text, size:30 %></td>
    </tr>
 
    <tr>
      <th><%= f.label :start_date ,"開始日" %></th>
      <td><%=  f.date_field :start_date %></td>
    </tr>
 
    <tr>
      <th><%= f.label :end_date ,"終了日" %></th>
      <td><%= f.date_field :end_date %></td>
    </tr>
 
    <tr>
      <th><%= f.label :check ,"終日" %></th>
      <td><%= f.check_box :check %><br>終日の場合はチェックを入れます</td>
    </tr>

    <tr>
      <th><%= f.label :memo ,"スケジュールメモ" %></th>
      <td><%= f.text_area :memo, size:"40x10" %></td>
    </tr>
  </table>
 
  <div class="button"><%= f.submit "登録完了する", class:"register"%></div>
  <%= link_to "スケジュール一覧に戻る", :users, class:"link-under" %>
<% end %>