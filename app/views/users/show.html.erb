<h3>スケジュール詳細</h3>
 
<table>
  <tr>
    <th>タイトル</th>
    <td class="show_table"><%= @user.text %></td>
  </tr>
  <tr>
    <th>開始日</th>
    <td><%= @user.start_date.to_formatted_s(:default) %></td>
  </tr>
  <tr>
    <th>終了日</th>
    <td><%= @user.end_date.to_formatted_s(:default) %></td>
  </tr>
  <tr>
    <th>終日</th>
    <td>
      <% if @user.check==true %>
      ○
      <% else %>

      <%end%>
    </td>
  </tr>
  <tr>
    <th>投稿日時</th>
    <td><%= @user.updated_at.to_s(:datetime_jp) %></td>
  </tr>
  <tr>
    <th>スケジュールメモ</th>
    <td class="table_memo"><%= simple_format(@user.memo) %></td>
  </tr>
</table>

<%= link_to "スケジュールを編集する", :edit_user, class:"link-under" %><br>
<%= link_to "スケジュール一覧に戻る", :users, class:"link", class:"link-under" %><br>
<%= link_to "スケジュール新規登録", :new_user, class:"link-under" %>